<article id="<%= dom_id group %>" class="media">
  <div class="media-left">
    <figure class="image is-96x96">
      <img src="<%= group.icon %>" alt="logo">
    </figure>
  </div>
  <div class="media-content">
    <div class="content">
      <p>
        <strong class="subtitle is-2"><%= group.name %></strong>
      </p>
    </div>
  </div>
  <div class="subtitle is-3">
    Invested: $ <%= (group.investments.collect { |i| i.amount }).sum.round(2) %>
  </div>
</article>
