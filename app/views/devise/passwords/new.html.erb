<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium", placeholder: "E-mail" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "button is-light is-large is-fullwidth" %>
  </div>
  <br>
<% end %>
<%= render "devise/shared/links" %>
