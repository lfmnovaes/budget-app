<p style="color: green"><%= notice %></p>

<h1 class="title is-1">Investments on <%= @group_name.name %></h1>

<div id="investments">
  <% @investments.each do |investment| %>
    <div class="box">
      <div class="columns">
        <%= render investment %>
        <div class="column is-one-fifth">
          <%= button_to "Delete", group_investment_path(id: investment.id), {method: :delete, class: "button is-danger is-medium"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<div>
  <%= button_to "New investment", new_group_investment_path, {method: :get, class: "button is-primary is-large"} %>
</div>
